[Unit]
Description=Automatica.Supervisor
After=mariadb.service
Requires=mariadb.service

[Service]
TimeoutStartSec=0
Restart=always
ExecStartPre=-/usr/bin/docker stop %n
ExecStartPre=-/usr/bin/docker rm %n
ExecStartPre=/usr/bin/docker pull automaticacore/automatica.supervisor:latest-develop
ExecStart=/usr/bin/docker run --rm --name %n -v /var/run/docker.sock:/var/run/docker.sock automaticacore/automatica.supervisor:latest-develop

[Install]
WantedBy=multi-user.target